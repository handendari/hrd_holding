@{
    ViewBag.Title = "Country";
    Layout = "~/Views/Shared/_header.cshtml";
}
<header>
    <script src="~/scripts/mCountry/m_country.js"></script>
</header>

<div>
    <table  style="width: 100%">
        <tr>
            <td colspan="4">
                <div style="margin-top:10px; margin-bottom: 2px" id="toolBarCountry"></div>
                <div id="tblCountry"></div>
            </td>
        </tr>
    </table>
</div>

<!--#region MODAL Title-->
<div id='modCountry'>
    <div>
        <span>COUNTRY DETAIL</span>
    </div>
    <div>
        <div id="notifContainer" style="height: 40px"></div>
        <div id="notifCountry">
            <div id="notifContent"></div>
        </div>
        <div style="margin-left: 10px">
            <table>
                <tr>
                    <td>Initial *</td>
                    <td>
                        <input type="text" id="txtCountryInitial" />
                    </td>
                </tr>
                <tr>
                    <td>Code *</td>
                    <td>
                        <input type="text" id="txtCountryCode" />
                    </td>
                </tr>
                <tr>
                    <td>Name *</td>
                    <td>
                        <input type="text" id="txtCountryName" /></td>
                </tr>
                <tr>
                    <td style="vertical-align: top">Description</td>
                    <td>
                        <textarea id="txtCountryDesc"></textarea></td>
                </tr>

                <tr>
                    <td>
                        <div style="margin-left: 5px; margin-top: 15px; width: 100px; height: 30px;" id="btnModCountrySave" role="button">
                            <img style="vertical-align: middle" src="~/content/images/Save as_24_grey.png">
                            <span style="position: relative; top: 3px;">SAVE</span>
                        </div>
                    </td>
                    <td>
                        <div style="margin-left: 5px; margin-top: 15px; width: 100px; height: 30px;" id="btnModCountryCancel" role="button">
                            <img style="vertical-align: middle" src="~/content/images/Close Pane_24_grey.png">
                            <span style="position: relative; top: 3px;">CANCEL</span>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
<!--#endregion-->
