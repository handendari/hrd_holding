    <script type="text/javascript">

        var base_url = '@String.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~/"))';
        var vTheme = 'custom_merah';

        var winHeight = 0;
        var winWidth = 0;

        var vCmbReligion = [
                "ISLAM",
                "KRISTEN",
                "KATOLIK",
                "HINDU",
                "BUDHA",
                "OTHERS"
        ];

