            $("#tdtProbation").jqxInput();
            $("#tdtWorkingAge").jqxInput();
            $("#txtPhone").jqxInput();
            $("#tdtEmail").jqxInput();
            $("#txtKdCountry").jqxInput();
            $("#btnKdCountry").jqxButton();
            $("#txtNmCountry").jqxInput();
            $("#txtNoKtp").jqxInput();
            $("#txtLastEducation").jqxInput();
            $("#txtLastEmployment").jqxInput();
            $("#txtKdBank").jqxInput();
