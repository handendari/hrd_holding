            $("#txtNickName").jqxInput();
            $("#dtPob").jqxInput();
            $("#dtDob").jqxInput();
            $("#txtGender").jqxInput();
            $("#txtReligion").jqxInput();
            $("#txtChild").jqxInput();
            $("#txtAddress").jqxInput();
            $("#txtKdDepartement").jqxInput();
            $("#btnKdDepartement").jqxButton();
            $("#txtNmDepartement").jqxInput();
            $("#txtKdJobTitle").jqxInput();
            $("#btnKdJobTitle").jqxButton();
            $("#txtNmJobTitle").jqxInput();
            $("#txtKdGrade").jqxInput();
            $("#btnKdGrade").jqxButton();
            $("#txtNmGrade").jqxInput();
            $("#txtKdLevel").jqxInput();
            $("#btnKdLevel").jqxButton();
            $("#txtNmLevel").jqxInput();
